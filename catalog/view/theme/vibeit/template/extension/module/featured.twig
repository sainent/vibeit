<div class="flex-container">
 {% for product in products %}
  <div class="product-layout flex-item">
    <div class="product-thumb transition">
      <div class="image">
        <a href="{{ product.href }}">
          <img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" />
        </a>
      </div>
      <div class="caption">
        <div class="product-name">
          <h3><a href="{{ product.href }}">{{ product.name }}</a></h3>
        </div>
        {% if product.rating %}
        <div class="rating">
          {% for i in 5 %}
          {% if product.rating < i %}
          <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span>
          {% else %}
          <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
          {% endif %}
          {% endfor %}
        </div>
        {% endif %}
        {% if product.price %}
        <div class="price-name">
          <h2 class="price">
            {% if not product.special %}
            {{ product.price }}
            {% else %}
            <span class="price-new">{{ product.special }}</span>
            {% endif %}
            {% if product.tax %}
            {% endif %}
          </h2>
        </div>
        {% endif %}
        <div class="description">
          <p><a href="{{ product.href }}">{{ product.description }}</a></p>
        </div>
      </div>
      <div class="show-more-container">
        <div class="show-more">
          <div>
            <div class="wishlist">
              <span><i class="vi vi-heart-o"></i></span>
              <span data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');"><i class="vi vi-heart"></i></span>
            </div>
            <div>
              <button class="share"><i class="vi vi-share" aria-hidden="true"></i></button>
            </div>
          </div>
          <div class="button-group">
            <button type="button" class="btn-buy" onclick="cart.add('{{ product.product_id }}', 1, true);"><span>{{ button_buy }}</span></button>
            <button type="button" class="btn-add" onclick="cart.add('{{ product.product_id }}');"><span>{{ button_cart }}</span></button>
          </div>
        </div>
      </div>
    </div>
  </div>
  {% endfor %}
</div>
